# This tmux statusbar config was created by tmuxline.vim
# on Sat, 19 Nov 2016

set -g status-bg "colour16"
set -g message-command-fg "colour16"
set -g status-justify "centre"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour45"
set -g message-bg "colour45"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour16"
set -g message-command-bg "colour45"
set -g status-attr "none"
# set -g status-utf8 "on"
set -g pane-border-fg "colour236"
set -g status-left-attr "none"
setw -g window-status-fg "colour45"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour16"
setw -g window-status-activity-attr "underscore"
setw -g window-status-activity-fg "colour45"
setw -g window-status-separator ""
setw -g window-status-bg "colour16"
set -g status-left "#[fg=colour45,bg=colour16] #H #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[fg=colour45,bg=colour16] %a %m/%d/%Y %R "
setw -g window-status-format "#[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]#[default] #I.#W #[fg=colour16,bg=colour16,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour16,bg=colour45,nobold,nounderscore,noitalics]#[fg=colour16,bg=colour45,bold] #I.#W #(${HOME}/.tmux_get_git_branch.sh #{pane_current_path}) #[fg=colour45,bg=colour16,nobold,nounderscore,noitalics]"
